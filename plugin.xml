<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.gotpike.pdt"
   name="Pike Development Tools"
   version="1.0.0"
   provider-name="pdt"
   class="org.gotpike.pdt.PDTPlugin">

   <runtime>
      <library name="PDT.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.help"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.ide"/>
   </requires>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Pike Code Editor"
            extensions="pike"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.gotpike.pdt.editors.PikeEditor"
            id="org.gotpike.pdt.editors.PikeEditor">
      </editor>
      <editor
            name="Sample Multi-page Editor"
            extensions="mpe"
            icon="icons/sample.gif"
            contributorClass="org.gotpike.pdt.editors.MultiPageEditorContributor"
            class="org.gotpike.pdt.editors.MultiPageEditor"
            id="org.gotpike.pdt.editors.MultiPageEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="org.gotpike.pdt.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="org.gotpike.pdt.actions.SampleAction"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="org.gotpike.pdt.actions.SampleAction">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml">
      </toc>
      <toc
            file="testToc.xml"
            primary="true">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Sample Wizards"
            id="org.gotpike.pdt">
      </category>
      <wizard
            name="Multi-page Editor file"
            icon="icons/sample.gif"
            category="org.gotpike.pdt"
            class="org.gotpike.pdt.wizards.SampleNewWizard"
            id="org.gotpike.pdt.wizards.SampleNewWizard">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <newWizardShortcut
               id="org.eclipse.jdt.ui.wizards.NewProjectCreationWizard">
         </newWizardShortcut>
         <viewShortcut
               id="org.eclipse.jdt.ui.TypeHierarchy">
         </viewShortcut>
         <perspectiveShortcut
               id="org.eclipse.debug.ui.DebugPerspective">
         </perspectiveShortcut>
         <actionSet
               id="org.eclipse.jdt.ui.JavaActionSet">
         </actionSet>
         <view
               relative="org.eclipse.ui.views.ResourceNavigator"
               relationship="stack"
               id="org.eclipse.jdt.ui.PackageExplorer">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.gotpike.pdt.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Sample Preferences"
            class="org.gotpike.pdt.preferences.SamplePreferencePage"
            id="org.gotpike.pdt.preferences.SamplePreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            objectClass="org.eclipse.core.resources.IFile"
            name="Sample Page"
            nameFilter="*.*"
            class="org.gotpike.pdt.properties.SamplePropertyPage"
            id="org.gotpike.pdt.properties.samplePropertyPage">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="org.gotpike.pdt">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="org.gotpike.pdt"
            class="org.gotpike.pdt.views.SampleView"
            id="org.gotpike.pdt.views.SampleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
         <viewerContribution 
      id="org.eclipse.ui.articles.action.contribution.popup.editor"
   targetID="#TextEditorContext">
            <menu
                  label="Source"
                  path="Source"
                  id="PDT.editor.menu.Source"/> 
   <action
         id="org.gotpike.pdt.popup.action.editor.CommentAction" 
         label="Editor Action 1"
         icon="icons/sample.gif"
         menubarPath="PDT.editor.menu.Source/group1" 
         class="org.gotpike.pdt.popup.actions.CommentAction"> 
      </action> 
</viewerContribution>      
   </extension>

</plugin>
