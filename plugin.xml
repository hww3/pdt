<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

     <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Pike Code Editor"
            extensions="pike, pmod"
            icon="icons/pike.png"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.gotpike.pdt.editors.PikeEditor"
            id="org.gotpike.pdt.editors.PikeEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="org.gotpike.pdt.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="org.gotpike.pdt.actions.SampleAction"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="org.gotpike.pdt.actions.SampleAction">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml">
      </toc>
      <toc
            file="testToc.xml"
            primary="true">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.gotpike.pdt"
            class="org.eclipse.ui.wizards.newresource.BasicNewFileResourceWizard"
            finalPerspective="org.gotpike.pdt.Perspective"
            icon="icons/pike.png"
            id="org.gotpike.pdt.wizards.newfile"
            name="Pike File"/>
      <category
            id="org.gotpike.pdt.newproject"
            name="Pike"/>
      <wizard
            category="org.gotpike.pdt.newproject"
            class="org.gotpike.pdt.PikeProjectResourceWizard"
            finalPerspective="org.gotpike.pdt.PikePerspective"
            icon="icons/pike.png"
            id="org.gotpike.pdt.newproject"
            name="Pike Project"
            project="true"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <newWizardShortcut
               id="org.eclipse.jdt.ui.wizards.NewProjectCreationWizard">
         </newWizardShortcut>
         <viewShortcut
               id="org.eclipse.jdt.ui.TypeHierarchy">
         </viewShortcut>
         <perspectiveShortcut
               id="org.eclipse.debug.ui.DebugPerspective">
         </perspectiveShortcut>
         <actionSet
               id="org.eclipse.jdt.ui.JavaActionSet">
         </actionSet>
         <view
               relative="org.eclipse.ui.views.ResourceNavigator"
               relationship="stack"
               id="org.eclipse.jdt.ui.PackageExplorer">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.gotpike.pdt.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
       <page
            class="org.gotpike.pdt.preferences.PikeMainPreferencePage"
            id="org.gotpike.pdt.preferences.PikeMainPreferencePage"
            name="Pike"/>
       <page
       		category="org.gotpike.pdt.preferences.PikeMainPreferencePage"
            class="org.gotpike.pdt.preferences.PikeEditorPreferencePage"
            id="org.gotpike.pdt.preferences.PikeEditorPreferencePage"
            name="Editor"/>
       <page
       		category="org.gotpike.pdt.preferences.PikeMainPreferencePage"
            class="org.gotpike.pdt.preferences.TaskTagsPreferencePage"
            id="org.gotpike.pdt.preferences.TaskTagsPreferencePage"
            name="Task Tags"/>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            objectClass="org.eclipse.core.resources.IFile"
            name="Sample Page"
            nameFilter="*.*"
            class="org.gotpike.pdt.properties.SamplePropertyPage"
            id="org.gotpike.pdt.properties.samplePropertyPage">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="org.gotpike.pdt">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="org.gotpike.pdt"
            class="org.gotpike.pdt.views.SampleView"
            id="org.gotpike.pdt.views.SampleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
         <viewerContribution 
      id="org.eclipse.ui.articles.action.contribution.popup.editor"
   targetID="#TextEditorContext">
            <menu
                  label="Source"
                  path="Source"
                  id="PDT.editor.menu.Source"/> 
   <action
         id="org.gotpike.pdt.popup.action.editor.CommentAction" 
         label="Editor Action 1"
         icon="icons/sample.gif"
         menubarPath="PDT.editor.menu.Source/group1" 
         class="org.gotpike.pdt.popup.actions.CommentAction"> 
      </action> 
</viewerContribution>      
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.gotpike.pdt.Perspective"
            icon="icons/pike.png"
            id="org.gotpike.pdt.PikePerspective"
            name="Pike"/>
   </extension>
   <extension
         id="pikenature"
         name="Pike Nature"
         point="org.eclipse.core.resources.natures">
      <builder id="org.gotpike.pdt.pikebuilder"/>
      <runtime>
         <run class="org.gotpike.pdt.PikeProjectNature"/>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="org.gotpike.pdt.decorators.PikeDecorator"
            id="org.gotpike.pdt.decorators.PikeDecorator"
            label="Pike"
            lightweight="true"
            location="BOTTOM_LEFT"
            objectClass="org.eclipse.core.resources.IResource"
            state="true"/>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/project_folder.gif"
            id="org.gotpike.pdt.pikeProjectNatureImage"
            natureId="org.gotpike.pdt.pikenature"/>
   </extension>
   <extension
         id="markers.pdt"
         name="PDT Base Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.gotpike.pdt.pikeProblemMarker"/>
   </extension>

</plugin>
